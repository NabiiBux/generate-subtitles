style.
  body {
      background-color: rgb(22, 29, 29);
  }

  * {
    box-sizing: border-box;
  }

  .container {
    max-width: 500px;
    margin: 60px auto;
  }

  .container h1 {
    text-align: center;
    color: white;
  }

  .no-pointer-events {
    pointer-events: none;
  }

  .btn {
    width: fit-content;
    display: inline-block;
    padding: 0.5em 1em;
    border: 2px solid;
    margin: 0 auto;
    text-decoration: none;
    cursor: pointer;
    transition: all 200ms ease-in-out;
  }

  .btn:where(:hover, :focus) {
    transform: scale(1.02);
  }